<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".login.LoginActivity">

    <TextView android:id="@+id/tv_name"
              android:text="Name: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/edt_name"
              android:layout_alignParentStart="true"/>

    <EditText android:id="@+id/edt_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@+id/tv_password" />

    <TextView android:id="@+id/tv_password"
              android:text="password: "
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_below="@+id/tv_name"
              android:layout_alignParentStart="true" android:layout_marginTop="25dp"/>

    <EditText android:id="@+id/edt_password"
              android:inputType="textPassword"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/tv_password" android:layout_alignParentEnd="true"
              android:layout_toEndOf="@+id/tv_password"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btn_login" android:layout_below="@+id/edt_password"
            android:layout_alignEnd="@+id/edt_password" android:layout_marginTop="34dp"/>

</RelativeLayout>
