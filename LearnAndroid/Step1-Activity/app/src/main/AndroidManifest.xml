<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kc.step1_activity.app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second" >
            <intent-filter>
                <action android:name="com.kc.step1_activity.app.ACTION_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FakeWebViewActivity"
            android:label="@string/title_activity_fake_web_view" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DialogActivity"
            android:label="@string/title_activity_dialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".StandardLaunchActivity"
            android:label="@string/title_activity_standard_launch"
            android:launchMode="standard" >
        </activity>
        <activity
            android:name=".SingleTopLaunchActivity"
            android:label="@string/title_activity_single_top_launch"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".SingleTaskLaunchActivity"
            android:label="@string/title_activity_single_task_launch"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".SingleInstanceLaunchActivity"
            android:label="@string/title_activity_single_instance_launch"
            android:launchMode="singleInstance" >
        </activity>
    </application>

</manifest>
